<h1>Se connecter</h1>

<form action="" method="post" {{ form_enctype(form)}}>
	{{ form_widget(form) }}
	<input type="submit"/>
</form>

{% if message == "Utilisateur connu" %}
	{% if user != 0 %}
	<a href="{{ path('my_app_messagerie_envoyer', { 'id': user }) }}">Envoyer un message</a><br>
	<a href="{{ path('my_app_messagerie_listerenvoyes', { 'id': user }) }}">Liste des messages envoyés</a><br>
	<a href="{{ path('my_app_messagerie_listerrecus', { 'id': user }) }}">Liste des messages reçus</a>
	{% endif %}
{% endif %}