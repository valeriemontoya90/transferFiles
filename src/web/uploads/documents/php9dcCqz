package com.example.testapp01;

import android.content.Context;
import android.location.Location;
import android.location.LocationListener;
import android.os.Bundle;
import android.widget.Toast;

public class MyLocationListener implements LocationListener {
	private Context context;
	
	public MyLocationListener(Context context) {
		// TODO Auto-generated constructor stub
		this.context = context;
	}
	@Override
	public void onLocationChanged(Location location) {
		// TODO Auto-generated method stub
		  Toast.makeText( context, "Location changed: Lat: " + location.getLatitude() + " Lng: " + location.getLongitude(), Toast.LENGTH_SHORT).show();

	}

	@Override
	public void onStatusChanged(String provider, int status, Bundle extras) {
		// TODO Auto-generated method stub

	}

	@Override
	public void onProviderEnabled(String provider) {
		// TODO Auto-generated method stub
		Toast.makeText( context, "GPS_PROVIDER enabled! ", Toast.LENGTH_SHORT).show(); 
	}

	@Override
	public void onProviderDisabled(String provider) {
		// TODO Auto-generated method stub
		Toast.makeText( context, "GPS_PROVIDER disabled! ", Toast.LENGTH_SHORT).show(); 
	}

}
